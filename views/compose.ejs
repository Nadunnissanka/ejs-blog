<%- include("partials/header"); -%>
<h1>Compose a blog post</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="comTitle">Blog Post Title</label>
        <input id="comTitle" type="text" name="postTitle" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="blogContent">Blog Post Content</label>
        <textarea class="form-control" id="blogContent" name="postBody" rows="10"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-lg btn-primary" name="button">Publish</button>
    </div>
</form>

<%- include("partials/footer"); -%>